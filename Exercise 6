package myScanner;

import java.util.Scanner;

public class Exercise6 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter an integer : ");
		int no = sc.nextInt();
		System.out.println ("Enter Double Value : ");
		double no2 = sc.nextDouble();
		
		System.out.println ("Using nextint() : " + no);
		
		System.out.println ("Using nextdouble() : " + no2);
		no++;
		no2--;
		System.out.println ("Using nextint()  increment by 1 : " + no);
		
		System.out.println ("Using nextdouble()  decrement by 1 : " + no2);
		
		no = no + 5;
		no2 = no2 - 5;
		
		System.out.println ("Using nextint()  increment by 5 : " + no);
		
		System.out.println ("Using nextdouble()  decrement by 5 : " + no2);
	
		no = no % 10;
		no2 = no2 % 10;
		System.out.println ("Using nextint() mod 10 : " + no );
		System.out.println ("Using nextdouble() mod 10 : " + no2 );
	
	}

}
